{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "store",
      "kebab-case"
    ],
    "indent": [true, "spaces", 4],
    "no-input-rename": [false],
    "space-before-function-paren": [true, "never"],
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  }
}
